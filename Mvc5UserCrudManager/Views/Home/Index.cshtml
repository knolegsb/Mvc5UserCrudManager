@using Mvc5UserCrudManager.Controllers

@{
    ViewBag.Title = "Tables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style
{
    <style type="text/css">
        .userTestForm th, .userTestForm td{
            min-width: 100px;
            min-height: 50px;
            text-align: center;
            border: solid;
        }
    </style>        
}

<h2>@ViewBag.Title</h2>

<hr />

@Html.ActionLink("Create New", "Create")

<hr />
<table class="userTestForm">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Country</th>
        <th>Courses</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var user in HomeController.userList)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Gender</td>
            <td>@user.Country</td>
            <td>
                @foreach (var item in user.Courses)
                {
                    @item.Name;<br />
                }
            </td>
            <td>@user.Description</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = @user.UserId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { @id = @user.UserId })
            </td>
        </tr>
    }
</table>


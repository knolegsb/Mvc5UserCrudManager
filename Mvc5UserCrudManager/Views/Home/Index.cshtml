@using Mvc5UserCrudManager.Controllers

@{
    ViewBag.Title = "Table of List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Style
{
    <style type="text/css">
        .userTestForm th, .userTestForm td{
            /*min-width: 100px;
            min-height: 50px;*/
            text-align: center;
            border: solid;
        }
        .userTestForm th {
            background-color: #0c9ccb;           
        }
    </style>        
}

<h2>@ViewBag.Title</h2>

<hr />

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })

<hr />
<table class="userTestForm table table-bordered table-striped table-hover" id="userTable">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Country</th>
        <th>Courses</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var user in HomeController.userList)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Gender</td>
            <td>@user.Country</td>
            <td>
                @foreach (var item in user.Courses)
                {
                    @item.Name;<br />
                }
            </td>
            <td>@user.Description</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = @user.UserId }, new { @class = "btn btn-default" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { @id = @user.UserId }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }
</table>


